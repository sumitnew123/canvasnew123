<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<?php $_vendors = $this->getVendors(); ?>
<div class="page-title vendor-title">
    <h1><?php echo Mage::helper('xcentia_vendors')->__('Vendors') ?></h1>
</div>
<?php if ($_vendors->getSize() > 0) :?>
    <?php echo $this->getPagerHtml(); ?>
    <div class="vendor-list-container">
    <?php foreach ($_vendors as $_vendor) : ?>
        <div class="vendor-list-item">
            <a href="<?php echo $_vendor->getVendorUrl()?>">
                <?php echo $_vendor->getTitle();?>
            </a><br />
        </div>
    <?php endforeach;?>
    </div>
    <?php echo $this->getPagerHtml(); ?>
<?php else : ?>
    <?php echo Mage::helper('xcentia_vendors')->__('There are no vendors at this moment');?>
<?php endif;?>
