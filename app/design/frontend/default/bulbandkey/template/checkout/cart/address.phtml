<?php if($_pAddsses = Mage::getSingleton('customer/session')->getCustomer()->getDefaultShipping()): ?>
<li class="col-lg-12 col-sm-12">
	<div class="shop-item">
		<div class="shop-item-summary">
			<div class="para-text">
				<?php echo $this->getAddressHtml(Mage::getSingleton('customer/session')->getCustomer()->getAddressById($_pAddsses)) ?>
			</div>
			<div class="delivery-add-btn"><a href="<?php echo $this->getUrl('checkout/onepage/placeorder', array('address'=>$_pAddsses)) ?>" class="btn btn-sm btn-default btn-bordered"> <span>Select</span> </a></div>
		</div>
	</div>
</li>
<?php endif ?>
<?php if($_pAddsses = $this->getAdditionalAddresses()): ?>
	<?php foreach($_pAddsses as $_address): ?>
	<li class="col-lg-12 col-sm-12">
		<div class="shop-item">
			<div class="shop-item-summary">
				<div class="para-text">
					<?php echo $this->getAddressHtml($_address) ?>
				</div>
				<div class="delivery-add-btn"><a href="<?php echo $this->getUrl('checkout/onepage/placeorder', array('address'=>$_address->getId())) ?>" class="btn btn-sm btn-default btn-bordered"> <span>Select</span> </a></div>
			</div>
		</div>
	</li>
	<?php endforeach; ?>
