?>
<?php $_helper = $this->helper('catalog/output'); ?>
<?php $_product = $this->getProduct(); ?>
<div id="messages_product_view">
	<?php echo $this->getMessagesBlock()->toHtml() ?>
</div>
<?php if($_product->getAttributeSetId() == 9) { ?>
	<?php if($_product->getTypeId() == 'virtual') { ?>
		<?php $content = $this->getChildHtml('travel_product') ?>
		<?php if ($_product->isSaleable() && $this->hasOptions()):?>
        	<?php echo str_replace('{CONTAINER1}', $this->getChildChildHtml('container1', '', true, true), $content)  ?>
        <?php else:?>
        	<?php echo str_replace('{CONTAINER1}', '', $content)  ?>
        <?php endif;?>
	<?php } else if($_product->getSku() == '3dobject') { ?>
		<?php $content = $this->getChildHtml('3d_product'); ?>
		<?php if ($_product->isSaleable() && $this->hasOptions()):?>
        	<?php echo str_replace('{CONTAINER1}', $this->getChildChildHtml('container1', '', true, true), $content)  ?>
        <?php else:?>
        	<?php echo str_replace('{CONTAINER1}', '', $content)  ?>
        <?php endif;?>
	<?php } else { ?>
		<?php $content = $this->getChildHtml('design_product'); ?>
		<?php if ($_product->isSaleable() && $this->hasOptions()):?>
        	<?php echo str_replace('{CONTAINER1}', $this->getChildChildHtml('container1', '', true, true), $content)  ?>
        <?php else:?>
        	<?php echo str_replace('{CONTAINER1}', '', $content)  ?>
        <?php endif;?>
	<?php } ?>
<?php } else { ?>
	<?php echo $this->getChildHtml('collection_product') ?>
<?php } ?>